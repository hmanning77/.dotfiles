#! /bin/sh

if [ $(pgrep -cx panel) -gt 1 ] ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

flavor=${1:-bar}

export PANEL_FIFO="/tmp/panel-fifo"
export PANEL_HEIGHT=16
export PRIMARY_PANEL_FIFO="/tmp/primary-fifo"
export SECONDARY_PANEL_FIFO="/tmp/secondary-fifo"

bar="/home/hugh/Software/Source/bar/bar"

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"
[ -e "$PRIMARY_PANEL_FIFO" ] && rm "$PRIMARY_PANEL_FIFO"
mkfifo "$PRIMARY_PANEL_FIFO"
[ -e "$SECONDARY_PANEL_FIFO" ] && rm "$SECONDARY_PANEL_FIFO"
mkfifo "$SECONDARY_PANEL_FIFO"


FONT_FAMILY='-*-nu-*-*-*-*-*-*-*-*-*-*-*-*'
FONT_SIZE=6
. panel_colors

bspc config top_padding $PANEL_HEIGHT

bspc control --subscribe > "$PANEL_FIFO" &
xtitle -sf 'T%s' > "$PANEL_FIFO" &
clock -sf "S%A %-d %B %%{F${COLOUR_HL_BLUE}}%-H:%M%%{F-}" > "$PANEL_FIFO" &
conky -c /home/hugh/.config/conky/dzen-conky > "$PANEL_FIFO" &

case "$flavor" in
	bar)
		cat "$PANEL_FIFO" | panel_bar &
        tail -f  "$PRIMARY_PANEL_FIFO" | $bar -g 1920x${PANEL_HEIGHT}+1280 -f ${FONT_FAMILY} -p -u 2 -B '#FF282828' -F '#FFA8A8A8' | dispatch.sh &
        tail -f  "$SECONDARY_PANEL_FIFO" | $bar -g 1280x${PANEL_HEIGHT} -f ${FONT_FAMILY} -p -u 2 -B '#FF282828' -F '#FFA8A8A8' | dispatch.sh &
		;;
	dzen2)
		cat "$PANEL_FIFO" | panel_dzen2 -f "$FONT_FAMILY" -s "$FONT_SIZE" &
        tail -f  "$PRIMARY_PANEL_FIFO" | dzen2 -h $PANEL_HEIGHT -dock -ta l -title-name main-panel -fn "${FONT_FAMILY}:pixelsize=${FONT_SIZE}" -fg "$COLOR_FOREGROUND" -bg "$COLOR_BACKGROUND" -x 1366 -w 1920 -p &
        tail -f "$SECONDARY_PANEL_FIFO" | dzen2 -h $PANEL_HEIGHT -dock -ta l -title-name secondary-panel -fn "${FONT_FAMILY}:pixelsize=${FONT_SIZE}" -fg "$COLOR_FOREGROUND" -bg "$COLOR_BACKGROUND" -x 0 -w 1366 -p &
		;;
esac

wait
