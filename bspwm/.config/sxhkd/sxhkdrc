#
# bspwm hotkeys
#

super + shift + q
    pkill -x panel; bspc quit

super + c
    bspc window --close

super + shift + c
    bspc window --kill

super + t
    bspc desktop --layout next

super + b
    bspc desktop --balance

super + {s,f}
    bspc window --toggle {floating,fullscreen}

super + {Tab,grave}
    bspc {window,desktop} --focus last

super + shift + {Tab,grave}
    bspc window {--swap,--to-desktop} last

super + y
    bspc window --to-window last.manual

super + m
    bspc window --swap biggest

super + {_,shift + }{h,j,k,l}
    bspc window --{focus,swap} {left,down,up,right}

super + {_,shift + }n
    bspc window --focus {next,prev}

super + {comma,period}
    bspc desktop --circulate {backward,forward}

super + bracket{left,right}
    bspc desktop --focus {prev,next}

super + backslash
    bspc desktop --focus last:focused

super + ctrl + {h,j,k,l}
    bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window --presel cancel,desktop --cancel-presel}

super + alt + {h,j,k,l}
    bspc window --edge {left,down,up,right} push

super + alt + shift + {h,j,k,l}
    bspc window --edge {right,up,down,left} pull

super + ctrl + {1-9}
    bspc window --ratio 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop --focus,window --to-desktop} focused:^{1-9,10}

super + equal
    bspwm_new_desktop.sh

super + minus
    bspc desktop focused --remove

~button1
    bspc pointer --grab focus

super + button{1-3}
    bspc pointer --grab {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer --track %i %i

#
# wm independent hotkeys
#

super + Return
    urxvtc

super + space
    dmenu_run -p "Run:" -fn '-*-nu-*-*-*-*-*-*-*-*-*-*-*-*'

XF86AudioPlay
    mpc toggle

XF86AudioStop
    mpc stop

XF86AudioPrev
    mpc prev

XF86AudioNext
    mpc next

shift + XF86AudioPlay
    mpc seek 0%

shift + XF86AudioPrev
    mpc seek -2%

shift + XF86AudioNext
    mpc seek +2%

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
